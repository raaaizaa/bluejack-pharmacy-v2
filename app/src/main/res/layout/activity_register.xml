<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    tools:context=".activities.Login">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="@color/full_white"
                android:textSize="36sp"
                android:paddingStart="24dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginVertical="24dp"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/register_name_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/edittext_styling"
                    android:hint="Name"
                    android:inputType="text"
                    android:padding="12dp"
                    android:textColor="@color/full_white"
                    android:textColorHint="@color/full_white" />


                <EditText
                    android:id="@+id/register_email_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/edittext_styling"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:textColor="@color/full_white"
                    android:textColorHint="@color/full_white" />

                <EditText
                    android:id="@+id/register_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/edittext_styling"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="@color/full_white"
                    android:textColorHint="@color/full_white" />

                <EditText
                    android:id="@+id/register_confirm_password_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/edittext_styling"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:padding="12dp"
                    android:textColor="@color/full_white"
                    android:textColorHint="@color/full_white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:padding="12dp"
                        android:textColor="@color/full_white"
                        android:text="+62" />

                    <EditText
                        android:id="@+id/register_phone_number_field"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="6dp"
                        android:background="@drawable/edittext_styling"
                        android:hint="Phone Number"
                        android:inputType="phone"
                        android:padding="12dp"
                        android:textColor="@color/full_white"
                        android:textColorHint="@color/full_white" />

                </LinearLayout>


                <Button
                    android:id="@+id/register_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/button_styling"
                    android:textColor="@color/full_white"
                    android:text="Register"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/go_to_login_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginVertical="6dp"
                    android:background="@drawable/button_styling"
                    android:textColor="@color/full_white"
                    android:text="Go to login page"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>