<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/full_white"
    tools:context=".activities.Authentication">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:src="@drawable/authenticationpage_illustration" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your account hasn't been verified... yet"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We've sent you an OTP code to have you verified."
                android:textAlignment="center"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/otp_field"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:inputType="number" />

            <Button
                android:id="@+id/enter_otp_button"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                android:background="@drawable/button_styling"
                android:text="ENTER OTP CODE"
                android:textColor="@color/full_white"
                app:layout_constraintTop_toBottomOf="@+id/otp_field" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>