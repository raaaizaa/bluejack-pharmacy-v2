<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/medicine_card"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        app:strokeColor="@color/card_outline"
        app:strokeWidth="1dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="@color/full_white"
            android:orientation="vertical">

                <ImageView
                    android:id="@+id/medicine_image"
                    android:padding="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />



            <LinearLayout
                android:id="@+id/medicine_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:foreground="@drawable/clicked_card"
                android:padding="8dp">

                <TextView
                    android:id="@+id/medicine_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:maxLines="2"
                    android:textColor="@color/black"
                    android:text="null" />

                <TextView
                    android:id="@+id/medicine_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="2dp"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="null" />

                <TextView
                    android:id="@+id/medicine_manufacturer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textSize="12dp"
                    android:textColor="@color/biru_binus_text"
                    android:text="null" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>